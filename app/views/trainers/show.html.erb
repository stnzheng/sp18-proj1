<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<% @pokemons.each do |poke| %>
  <% if poke.ndex %>
    <%= image_tag("pokemon/#{poke.ndex}.png", alt: "pokemon") %>
    <%= poke.name %> 
    Lvl <%= poke.level %>
    Hlth <%= poke.health %>

  	<%= button_to "Damage!", damage_path(id: poke), :class => "button medium", :method => :patch %>
  <% end %>
<% end %>
<br>
<%= button_to "Create Pokemon >>", pokemons_new_path, :class => "button medium", :method => "get" %>
